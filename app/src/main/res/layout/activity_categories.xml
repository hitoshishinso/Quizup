<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Homie.Categories"
        android:background="@color/greyBackColor"
>


    <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/root_action_bar"
            android:layout_marginBottom="10dp"
    >

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quizes"
                android:textSize="23sp"
                android:textStyle="bold"

        />

    </androidx.appcompat.widget.Toolbar>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/top_viewer"
            android:layout_below="@+id/root_action_bar"

    >
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/selectAQuiz"
                android:layout_marginLeft="60dp"
                android:text="@string/select_a_category"
                android:layout_marginBottom="15dp"
                android:textSize="16sp"
                android:textStyle="bold"
        />



    </RelativeLayout>


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/backprimary"
            android:layout_marginLeft="50dp"
            android:id="@+id/relativeListView"
            android:layout_below="@id/top_viewer"
    >




    </RelativeLayout>



</RelativeLayout>