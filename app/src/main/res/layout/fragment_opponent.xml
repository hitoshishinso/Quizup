<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".FinalPackage.Fragments.OpponentFragment">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">


        <TextView
                android:id="@+id/swagDialogTextview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:textSize="18sp"
                android:textAlignment="center"
                android:text="@string/connect_dialog"
                android:textStyle="bold"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="60dp"
        />

        <Button
                android:id="@+id/startMatchButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/swagDialogTextview"
                android:layout_marginLeft="76dp"
                android:layout_marginRight="76dp"
                android:layout_marginBottom="16dp"
                android:text="@string/start_swag_quiz"
        />

        <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/opponentProfilePicture"
                android:layout_width="104dp"
                android:layout_height="104dp"
                android:layout_below="@id/startMatchButton"
                android:layout_centerInParent="true"
                android:scaleType="centerCrop"
        />

    </RelativeLayout>

</FrameLayout>