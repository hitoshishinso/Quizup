<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Testing.WhoToPlay">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="30dp"
    >

        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playRandomButton"
                android:text="@string/playRandomly"
                android:layout_marginBottom="10dp"
        />


        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playFirendButton"
                android:text="@string/playFriend"
                android:layout_below="@id/playRandomButton"
                android:layout_marginBottom="10dp"
        />


        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/playBotButton"
                android:text="@string/playBot"
                android:layout_below="@id/playFirendButton"
                android:layout_marginBottom="10dp"
        />



    </RelativeLayout>


</RelativeLayout>